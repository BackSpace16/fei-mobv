        <item name="android:textSize">18sp</item>

        <item name="buttonStyle">@style/blueButton</item>
    </style>

    <style name="menuIcon">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="greenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20sp</item>
        <item name="android:backgroundTint">#6BD56C</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="blueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20sp</item>
        <item name="android:backgroundTint">#4A8BF8</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="redButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20sp</item>
        <item name="android:backgroundTint">#F84A4A</item>
